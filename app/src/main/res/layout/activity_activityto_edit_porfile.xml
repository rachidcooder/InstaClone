<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitytoEditPorfile"
    android:background="@color/ic_launcher_background">
    <Toolbar
        android:id="@+id/toolbarinEditProfileID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ic_launcher_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/editCloseID"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_close" />

            <TextView
                android:id="@+id/edPrf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toStartOf="@id/saveafterEditprofile"
                android:layout_toEndOf="@id/editCloseID"
                android:text="Edit Profile"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/saveafterEditprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="save"
                android:textColor="@color/bleu_strong"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarinEditProfileID"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:id="@+id/layouChangeProfileID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImgEditProfile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/enginner_pic"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/bleu_normal"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:text="Change Profile Photo"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:text="Name*"
            android:layout_marginBottom="2dp"/>
        <EditText
            android:id="@+id/NameEditProfileID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:padding="3dp"
            android:ems="10"
            android:background="@drawable/edts_chape"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:text="Username*"
            android:layout_marginBottom="2dp"/>
        <EditText
            android:id="@+id/userNinEditprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:padding="3dp"
            android:ems="10"
            android:background="@drawable/edts_chape"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:text="Website"
            android:layout_marginBottom="2dp"/>
        <EditText
            android:id="@+id/websiteEditprfID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:padding="3dp"
            android:ems="10"
            android:background="@drawable/edts_chape"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:text="bio"
            android:layout_marginBottom="2dp"/>
        <EditText
            android:id="@+id/bioEditID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:ems="10"
            android:padding="3dp"
            android:background="@drawable/edts_chape"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</RelativeLayout>