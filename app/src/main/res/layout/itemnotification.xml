<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#E3E1E1">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfileNotiID"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_person_pin" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imgProfileNotiID"
        android:layout_toStartOf="@id/imgPostInNotiID"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtUsernameNotiID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:textColor="@color/bleu_strong"
            android:textSize="19sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtNotiID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:text="Comment txt"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgPostInNotiID"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true" />
</RelativeLayout>